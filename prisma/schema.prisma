generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  INSURER
}

model User {
  id              Int     @id @default(autoincrement())
  role            Role
  address         String  @unique
  claims          Claim[]
  knowledgeCID    String?
  landCoordinates Json?
}

model Claim {
  id              Int    @id @default(autoincrement())
  userId          Int
  user            User   @relation(fields: [userId], references: [id])
  description     String
  transactionHash String
  runId           Int?
}
